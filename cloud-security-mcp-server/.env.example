# Cloud Security MCP Server Configuration

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# Azure Configuration  
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=
GCP_PROJECT_ID=
GCP_SERVICE_ACCOUNT_KEY=

# Kubernetes Configuration
KUBECONFIG_PATH=~/.kube/config
KUBERNETES_NAMESPACE=default

# Docker Configuration
DOCKER_REGISTRY_URL=
DOCKER_USERNAME=
DOCKER_PASSWORD=

# Security Tool Configuration
ENABLE_CONTAINER_SCANNING=true
ENABLE_IAC_SCANNING=true
ENABLE_COMPLIANCE_CHECKS=true
MAX_SCAN_TIME_MINUTES=30

# Compliance Frameworks (comma-separated)
COMPLIANCE_FRAMEWORKS=cis,nist,soc2,pci_dss,gdpr,hipaa

# Security Configuration
ALLOWED_REGIONS=us-east-1,us-west-2,eu-west-1
EXCLUDED_RESOURCES=test-*,dev-*,sandbox-*

# Monitoring & Alerting
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS=
ALERT_SEVERITY_THRESHOLD=high

# Database (Optional)
DATABASE_URL=sqlite:///cloud_security.db
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/cloud_security.log

# Performance
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT_SECONDS=1800
RESULT_RETENTION_DAYS=90

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT_SECONDS=30
